<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="OnlineStore_WEB" transaction-type="RESOURCE_LOCAL">
		<class>entities.User</class>
		<class>entities.Category</class>
		<class>entities.Section</class>
		<class>entities.Product</class>
		<class>entities.Order</class>
		<class>entities.Orderproduct</class>
		<class>entities.Favourite</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/mydb" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="root" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
		</properties>
	</persistence-unit>
</persistence>
